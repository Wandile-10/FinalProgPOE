<Window x:Class="FinalProgPOE.ViewRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Recipe" Height="450" Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/download.jpg"/>
        </Grid.Background>

        <!-- Recipe Name -->
        <Label x:Name="RecipeNameLabel" Content="Recipe Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="RecipeNameTextBlock" HorizontalAlignment="Left" Margin="110,10,0,0" VerticalAlignment="Top" Width="300" FontWeight="Bold"/>

        <!-- Ingredients -->
        <Label Content="Ingredients:" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="IngredientsTextBlock" HorizontalAlignment="Left" Margin="110,60,0,0" VerticalAlignment="Top" Width="300" Height="100" TextWrapping="Wrap"/>

        <!-- Directions -->
        <Label Content="Directions:" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="DirectionsTextBlock" HorizontalAlignment="Left" Margin="97,167,0,0" VerticalAlignment="Top" Width="452" Height="192" TextWrapping="Wrap"/>

        <!-- Exit Button -->
        <Button Content="Exit" HorizontalAlignment="Left" Margin="9,344,0,0" VerticalAlignment="Top" Width="75" Click="Exit_Click"/>
    </Grid>
</Window>
