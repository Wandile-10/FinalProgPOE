<Window x:Class="FinalProgPOE.DeleteRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Recipe" Height="150" Width="300">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/AESTHETICS PAPER.jpg"/>
        </Grid.Background>

        <Label Content="Are you sure you want to delete this recipe?" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,10,50"/>

        <!-- Delete Button -->
        <Button Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="75" Click="Delete_Click"/>

        <!-- Cancel Button -->
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="75" Click="Cancel_Click"/>
    </Grid>
</Window>
